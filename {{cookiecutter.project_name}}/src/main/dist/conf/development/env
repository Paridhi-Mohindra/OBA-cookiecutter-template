#!/bin/bash

JAVA_OPTS+=("-Xms256m" "-Xmx256m")
JAVA_OPTS+=("-XX:+UseParallelOldGC")
JAVA_OPTS+=("-XX:NewRatio=1")
JAVA_OPTS+=("-XX:SurvivorRatio=8")
JAVA_OPTS+=("-XX:-UseAdaptiveSizePolicy")
JAVA_OPTS+=("-verbose:gc")
JAVA_OPTS+=("-XX:+PrintGCDetails")
JAVA_OPTS+=("-XX:ParallelGCThreads=4")
JAVA_OPTS+=("-XX:+PrintGCDateStamps")
JAVA_OPTS+=("-XX:+PrintGCApplicationStoppedTime")
JAVA_OPTS+=("-XX:+PrintSafepointStatistics")
JAVA_OPTS+=("-XX:PrintSafepointStatisticsCount=1")
JAVA_OPTS+=("-XX:+PrintGCCause")
JAVA_OPTS+=("-XX:+PrintTenuringDistribution")
JAVA_OPTS+=("-XX:+PrintReferenceGC")
JAVA_OPTS+=("-XX:+PrintJNIGCStalls")
# JAVA_OPTS+=("-XX:+PrintClassHistogramAfterFullGC")
